@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="card-title mt-3">Password Reset Complete</h2>
                    <p class="card-text">
                        Your password has been reset successfully.
                    </p>
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Login with New Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>