@model IEnumerable<BudgetBuddy.Models.ViewModels.UserManagementViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <h2 class="mb-4">User Management</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success custom-alert" role="alert">
            @TempData["Success"]
        </div>
    }

    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@user.FullName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@user.Email</h6>
                        <p class="card-text">
                            Created At: @user.CreatedAt.ToShortDateString() <br />
                            Last Login: @(user.LastLoginAt?.ToShortDateString() ?? "Never") <br />
                            Role: @user.Role <br />
                            Expenses: @user.ExpenseCount (Total: @user.TotalExpenses.ToString("C"))
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @if (user.IsActive)
                                {
                                    <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger btn-custom">Deactivate</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-success btn-custom">Activate</button>
                                    </form>
                                }
                            </div>
                            <div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-secondary btn-custom dropdown-toggle" type="button" id="dropdownRoleMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                        Change Role
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownRoleMenu">
                                        <li><a class="dropdown-item" asp-action="ChangeRole" asp-route-id="@user.Id" asp-route-role="Admin">Admin</a></li>
                                        <li><a class="dropdown-item" asp-action="ChangeRole" asp-route-id="@user.Id" asp-route-role="User">User</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>