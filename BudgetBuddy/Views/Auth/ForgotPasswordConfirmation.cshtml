@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
                    <h2 class="card-title mt-3">Check Your Email</h2>
                    <p class="card-text">
                        If you have an account with us, we have sent a password reset link to your email address.
                    </p>
                    <p class="card-text text-muted">
                        The link will expire in 24 hours.
                    </p>
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Return to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>